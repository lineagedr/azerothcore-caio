+bool LuaVal::operator==(LuaVal const& rhs) const
+{
+    if (tag != rhs.tag)
+        return false;
+    switch (tag)
+    {
+    case TBOOL:
+        return b == rhs.b;
+    case TNIL:
+        return true;
+    case TSTRING:
+        return s == rhs.s;
+    case TNUMBER:
+        return d == rhs.d;
+    case TTABLE:
+        return tbl_ptr == rhs.tbl_ptr;
+    }
+    throw smallfolk_exception("operator== invalid or unhandled tag %i", tag);
+}
