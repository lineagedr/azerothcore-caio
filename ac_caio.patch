+LuaVal & LuaVal::setignore(LuaVal const & k, LuaVal const & v)
+{
+    if (!istable())
+        throw smallfolk_exception("using setignore on non table object");
+    if (k.isnil())
+        throw smallfolk_exception("using setignore with nil key");
+    if (v.isnil())
+        return *this;
+    LuaTable & tbl = (*tbl_ptr);
+    tbl.emplace(k, v);
+    return *this;
