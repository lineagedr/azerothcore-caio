+bool LuaVal::has(LuaVal const & k) const
+{
+    if (!istable())
+        throw smallfolk_exception("using has on non table object");
+    if (k.isnil())
+        throw smallfolk_exception("using has with nil key");
+    LuaTable & tbl = (*tbl_ptr);
+    auto it = tbl.find(k);
+    return it != tbl.end();
