+{
+    if (!istable())
+        throw smallfolk_exception("using rem on non table object");
+    if (k.isnil())
+        throw smallfolk_exception("using set with nil key");
+    LuaTable & tbl = (*tbl_ptr);
+    tbl.erase(k);
+    return *this;
+}
