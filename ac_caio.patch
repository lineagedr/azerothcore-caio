+LuaVal const & LuaVal::get(LuaVal const & k) const
+{
+    if (!istable())
+        throw smallfolk_exception("using get on non table object");
+    if (k.isnil())
+        throw smallfolk_exception("using get with nil key");
+    LuaTable & tbl = (*tbl_ptr);
+    auto it = tbl.find(k);
+    if (it != tbl.end())
+        return it->second;
+    return nil;
+}
